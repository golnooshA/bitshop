<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/long_long_margin"
        android:layout_marginTop="@dimen/standard_margin"
        android:layout_marginRight="@dimen/long_long_margin"
        android:background="@drawable/card_shadow"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_margin">

            <ImageView
                android:id="@+id/menu_bar"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="90"
                android:layout_gravity="center"
                android:src="@drawable/menu_bar" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/recycler_imageview"
                android:layout_weight="15"
                android:layout_gravity="center"
                android:layout_marginRight="45dp"
                android:src="@drawable/image_recycler" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/source_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/standard_margin"
                android:layout_weight="10"
                android:gravity="left" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/standard_margin"
                android:layout_weight="10"
                android:gravity="right"
                android:text="مبدا" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/short_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/torget_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/standard_margin"
                android:layout_weight="10"
                android:gravity="left" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/standard_margin"
                android:layout_weight="10"
                android:gravity="right"
                android:text="مقصد" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/short_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/currency_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/standard_margin"
                android:layout_weight="10"
                android:gravity="left"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/standard_margin"
                android:layout_weight="10"
                android:gravity="right"
                android:text="مقدار" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/short_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/currency_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/standard_margin"
                android:layout_weight="10"
                android:gravity="left" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/standard_margin"
                android:layout_weight="10"
                android:gravity="right"
                android:text="نرخ تبدیل" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/short_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/expire_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/standard_margin"
                android:layout_weight="10"
                android:gravity="left" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/standard_margin"
                android:layout_weight="10"
                android:gravity="right"
                android:text="تاریخ انقضا" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/short_margin"
            android:layout_marginBottom="@dimen/short_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/explain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/standard_margin"
                android:layout_weight="10"
                android:gravity="left" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/standard_margin"
                android:layout_weight="10"
                android:gravity="right"
                android:text="توضیحات" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>