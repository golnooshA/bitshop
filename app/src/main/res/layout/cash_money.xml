<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:background="@drawable/cash"
        android:layout_gravity="center">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/cash_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اعتبار"
            android:textColor="@color/white"
            android:textSize="@dimen/selected_offer_text_size"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/short_short_margin"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/cash_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="10000 IRR"
            android:textColor="@color/white"
            android:layout_below="@id/cash_text"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>

</LinearLayout>