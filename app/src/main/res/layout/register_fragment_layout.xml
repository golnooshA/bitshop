        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <EditText
                android:id="@+id/register_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:gravity="right"
                android:background="@drawable/round_edit_text"
                android:hint="کلمه عبور"
                android:paddingRight="@dimen/login_username_hint_text_paddingRight"
                android:paddingLeft="@dimen/standard_margin"
                android:paddingTop="@dimen/login_password_type_padding"
                android:inputType="textPassword"
                android:textColor="@color/login_edittext"
                android:layout_marginBottom="@dimen/short_margin"/>

            <ImageView
                android:layout_width="@dimen/login_password_icon_size"
                android:layout_height="@dimen/login_password_icon_size"
                android:src="@drawable/icon_password"
                android:layout_alignRight="@id/register_password"
                android:layout_marginRight="@dimen/login_username_icon_margin"
                android:layout_marginTop="@dimen/short_margin"/>
        </RelativeLayout>

        <RelativeLayout
