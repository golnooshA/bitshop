<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/long_margin"
        android:background="@drawable/card_shadow"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/standard_margin"
            android:layout_marginTop="@dimen/short_margin"
            android:layout_marginRight="@dimen/standard_margin"
            android:layout_marginBottom="@dimen/short_margin"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/short_margin"
                android:gravity="center"
                android:text="ویرایش اطلاعات"
                android:textSize="@dimen/text_size" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/login_username_icon_size"
                android:layout_height="@dimen/login_username_icon_size"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/edit"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/standard_margin"
            android:layout_marginRight="@dimen/standard_margin"
            android:layout_marginBottom="@dimen/short_margin"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/connection_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/short_margin"
                android:gravity="center"
                android:text="تماس با پشتیبانی"
                android:textSize="@dimen/text_size" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/login_username_icon_size"
                android:layout_height="@dimen/login_username_icon_size"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/support"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/standard_margin"
            android:layout_marginRight="@dimen/standard_margin"
            android:layout_marginBottom="@dimen/standard_margin"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/short_margin"
                android:gravity="center"
                android:text="خروج"
                android:textSize="@dimen/text_size" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/login_username_icon_size"
                android:layout_height="@dimen/login_username_icon_size"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/icon_exit"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>